{
    "plugins": [
        "@typescript-eslint/eslint-plugin"
    ],
    "parser": "@typescript-eslint/parser",
    "extends": [
        "standard",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "semi": ["warn", "never"],
        "no-var": [
            "error"
        ],
        "prefer-const": [
            "warn",
            {
                "destructuring": "all",
                "ignoreReadBeforeAssign": true
            }
        ]
    }
}